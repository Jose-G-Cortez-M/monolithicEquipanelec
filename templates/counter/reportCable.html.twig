{% block body %}
   <h1>Lista de Cable</h1>
    <table class="table table-hover table-bordered">
        <thead>
            <tr class="table-dark">
                <th>Nombre</th>
                <th>Disponible</th>
                <th>Límite mínimo</th>
            </tr>
        </thead>
        <tbody>
        {% for cable in cables %}
                <tr>
                    <td>{{ cable.name }}</td>
                    <td>{{ cable.availability }}</td>
                    <td>{{ cable.minimumLimit }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">No se encontraron registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}