{% extends 'base.html.twig' %}

{% block title %}Cliente{% endblock %}

{% block body %}
    <h1>Cliente</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Identificador</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Empresa</th>
                <td>{{ client.company }}</td>
            </tr>
            <tr>
                <th>Representante</th>
                <td>{{ client.representative }}</td>
            </tr>
            <tr>
                <th>Teléfono</th>
                <td>{{ client.phone }}</td>
            </tr>
            <tr>
                <th>Dirección</th>
                <td>{{ client.direction }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('client/_edit_form.html.twig') }}
    {% if is_granted("ROLE_MANAGER") %}
        {{ include('client/_delete_form.html.twig') }}
    {% endif %}
    {{ include('client/_backList_form.html.twig') }}

{% endblock %}
