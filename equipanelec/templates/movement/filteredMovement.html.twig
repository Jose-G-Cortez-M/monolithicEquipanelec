{% extends 'base.html.twig' %}

{% block title %}Movement List{% endblock %}

{% block body %}
    <h1>Movement List</h1>

    <a href="{{ path('material_index') }}"><i class="fas fa-hand-point-left"> back to list Materials</i></a>

    {{ message |raw}}
    <table class="table table-hover table-bordered">
        <thead>
        <tr class="table-dark">
            <th>Name</th>
            <th>Quantity</th>
            <th>Description</th>
            <th>OrderDate</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for movement in movements %}
            <tr>

                <td>
                    {% if movement.materials.name |default %}
                        {{ movement.materials.name }}
                    {% endif %}
                    {% if movement.tools.name |default %}
                        {{ movement.tools.name }}
                    {% endif %}
                    {% if movement.cables.name |default %}
                        {{ movement.cables.name }}
                    {% endif %}
                </td>

                <td>{{ movement.quantity }}</td>
                <td id="desc">{{ movement.description }}</td>
                <td>{{ movement.orderDate ? movement.orderDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('movement_edit', {'id': movement.id}) }}"><i class="fas fa-edit"> Edit or Add to a project</i></a>
                    {{ include('movement/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
