{% extends 'base.html.twig' %}

{% block title %}Material{% endblock %}

{% block body %}
    <h1>Material</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ material.id }}</td>
            </tr>
            <tr>
                <th>Barcode</th>
                <td>{{ material.barcode }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ material.name }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ material.stock }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ material.brand }}</td>
            </tr>
            <tr>
                <th>Purchase Price</th>
                <td>{{ material.purchasePrice }}</td>
            </tr>
            <tr>
                <th>Sale Price</th>
                <td>{{ material.salePrice }}</td>
            </tr>
            <tr>
                <th>Minimum Limit</th>
                <td>{{ material.minimumLimit }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ material.location }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ material.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('material_index') }}">back to list</a>
    {{ include('material/_delete_form.html.twig') }}
    <a href="{{ path('material_edit', {'id': material.id}) }}">edit</a>

{% endblock %}
