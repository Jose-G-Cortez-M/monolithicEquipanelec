{% extends 'base.html.twig' %}

{% block title %}Material List{% endblock %}

{% block body %}
    <h1>Material List</h1>

    <h4><a href="{{ path('material_new') }}"><i class="fas fa-archive"> Add new material</i></a></h4>
    <table class="table table-hover table-bordered">
        <thead>
            <tr class="table-dark">
                <th>Image</th>
                <th>Name</th>
                <th>Stock</th>
                <th>Location</th>
                <th>Description</th>
                <th>Minimum Limit</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for material in materials %}
            {% if material.minimumLimit is null or material.minimumLimit>material.stock %}
                <tr class="table-warning">
                    <td><img src="{{ vich_uploader_asset(material, 'imageFile') }}" alt="{{ material.name }}" height="100">
                    </td>
                    <td>{{ material.name }}</td>
                    <td>{{ material.stock }}</td>
                    <td id="desc">{{ material.location }}</td>
                    <td id="desc">{{ material.description }}</td>
                    <td>{{ material.minimumLimit }}</td>
                    <td>
                        <a href="{{ path('material_show', {'id': material.id}) }}"><i class="far fa-eye"> Show details</i></a>
                        {{ include('material/_movement_form.html.twig') }}
                        <a href="{{ path('material_edit', {'id': material.id}) }}"><i class="fas fa-edit"> Upgrade or add more material</i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td><img src="{{ vich_uploader_asset(material, 'imageFile') }}" alt="{{ material.name }}" height="100">
                    </td>
                    <td>{{ material.name }}</td>
                    <td>{{ material.stock }}</td>
                    <td id="desc">{{ material.location }}</td>
                    <td id="desc">{{ material.description }}</td>
                    <td>{{ material.minimumLimit }}</td>
                    <td>
                        <a href="{{ path('material_show', {'id': material.id}) }}"><i class="far fa-eye"> Show details</i></a>
                        <br>
                        <a href="{{ path('material_edit', {'id': material.id}) }}"><i class="fas fa-edit"> Upgrade or add more material</i></a>
                        {{ include('material/_movement_form.html.twig') }}
                    </td>
                </tr>
            {% endif %}

        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
