{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ task.name }}</td>
            </tr>
            <tr>
                <th>Time Per Minute</th>
                <td>{{ task.timeperminute }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>Cost Per Task</th>
                <td>{{ task.costpertask }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('task_index') }}"><i class="fas fa-hand-point-left"> back to list</i></a>
    <br>
    <a href="{{ path('task_edit', {'id': task.id}) }}"><i class="fas fa-edit"> Edit</i></a>

    {% if is_granted("ROLE_MANAGER") %}
        {{ include('task/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
