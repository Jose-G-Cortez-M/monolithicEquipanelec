{% extends 'base.html.twig' %}

{% block title %}Cable List{% endblock %}

{% block body %}
    <h1>Cable List</h1>

    <a href="{{ path('cable_new') }}">Create a new cable</a>

    <table class="table table-hover table-bordered">
        <thead >
            <tr class="table-dark">
                <th>Image</th>
                <th>Name</th>
                <th>Availability</th>
                <th>Location</th>
                <th>Description</th>
                <th>Minimum Limit</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cable in cables %}
            {% if cable.minimumLimit is null or cable.minimumLimit>=cable.availability %}
                <tr class="table-warning">
                    <td><img src="{{ vich_uploader_asset(cable, 'imageFile') }}" alt="{{ cable.name }}" height="100"></td>
                    <td>{{ cable.name }}</td>
                    <td>{{ cable.availability }}</td>
                    <td>{{ cable.location }}</td>
                    <td>{{ cable.description }}</td>
                    <td>{{ cable.minimumLimit }}</td>
                    <td>
                        <a href="{{ path('cable_show', {'id': cable.id}) }}">Show details</a>
                        {{ include('cable/_movement_form.html.twig') }}
                        <a href="{{ path('cable_edit', {'id': cable.id}) }}">Upgrade or add more cable</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td><img src="{{ vich_uploader_asset(cable, 'imageFile') }}" alt="{{ cable.name }}" height="100"></td>
                    <td>{{ cable.name }}</td>
                    <td>{{ cable.availability }}</td>
                    <td>{{ cable.location }}</td>
                    <td>{{ cable.description }}</td>
                    <td>{{ cable.minimumLimit }}</td>
                    <td>
                        <a href="{{ path('cable_show', {'id': cable.id}) }}">Show details</a>
                        {{ include('cable/_movement_form.html.twig') }}
                        <a href="{{ path('cable_edit', {'id': cable.id}) }}">Upgrade or add more cable</a>
                    </td>
                </tr>
            {% endif %}

        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
