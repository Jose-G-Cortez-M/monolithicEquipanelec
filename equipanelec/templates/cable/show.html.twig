{% extends 'base.html.twig' %}

{% block title %}Cable{% endblock %}

{% block body %}
    <h1>Cable</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cable.id }}</td>
            </tr>
            <tr>
                <th>Barcode</th>
                <td>{{ cable.barcode }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ cable.name }}</td>
            </tr>
            <tr>
                <th>Availability</th>
                <td>{{ cable.availability }}</td>
            </tr>
            <tr>
                <th>Weight per meter</th>
                <td>{{ cable.weightPerMeter }}</td>
            </tr>
            <tr>
                <th>Purchase price</th>
                <td>{{ cable.purchasePrice }}</td>
            </tr>
            <tr>
                <th>Sale price</th>
                <td>{{ cable.salePrice }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ cable.description }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ cable.location }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('cable_index') }}">back to list</a>
    {{ include('cable/_delete_form.html.twig') }}
    <a href="{{ path('cable_edit', {'id': cable.id}) }}">edit</a>


{% endblock %}
