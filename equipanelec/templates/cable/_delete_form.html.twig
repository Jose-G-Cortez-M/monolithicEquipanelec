<form method="post" action="{{ path('cable_delete', {'id': cable.id}) }}" onsubmit="return confirm('Are you sure you want to delete this article? you lose the movements associated with the cable');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cable.id) }}">
    <button class="btn btn-danger" id="button"><i class="fas fa-trash-alt"></i></button>
</form>
