{% extends 'base.html.twig' %}

{% block title %}Tool{% endblock %}

{% block body %}
    <h1>Tool</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Image</th>
                <td>
                    <img src="{{ vich_uploader_asset(tool, 'imageFile') }}" alt="{{ tool.name }}" height="150">
                </td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ tool.id }}</td>
            </tr>
            <tr>
                <th>Barcode</th>
                <td>{{ tool.barcode }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tool.name }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ tool.stock }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ tool.brand }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ tool.price }}</td>
            </tr>
            <tr>
                <th>Minimum Limit</th>
                <td>{{ tool.minimumLimit }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ tool.location }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tool.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tool_index') }}">back to list</a>
    {{ include('tool/_delete_form.html.twig') }}
    <a href="{{ path('tool_edit', {'id': tool.id}) }}">edit</a>


{% endblock %}
