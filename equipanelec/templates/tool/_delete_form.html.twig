<form method="post" action="{{ path('tool_delete', {'id': tool.id}) }}" onsubmit="return confirm('Are you sure you want to delete this article? you lose the movements associated with the tool');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tool.id) }}">
    <button class="btn btn-danger" id="button"><i class="fas fa-trash-alt"></i></button>
</form>
