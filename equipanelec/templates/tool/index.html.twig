{% extends 'base.html.twig' %}

{% block title %}Tool List{% endblock %}

{% block body %}
    <h1>Tool List</h1>

    <a href="{{ path('tool_new') }}">Create new</a>

    <table class="table table-hover table-bordered">
        <thead>
            <tr class="table-dark">
                <th>Name</th>
                <th>Stock</th>
                <th>Location</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tool in tools %}
            <tr>
                <td>{{ tool.name }}</td>
                <td>{{ tool.stock }}</td>
                <td>{{ tool.location }}</td>
                <td>{{ tool.description }}</td>
                <td>
                    <a href="{{ path('tool_show', {'id': tool.id}) }}">Show details</a>
                    {{ include('tool/_movement_form.html.twig') }}
                    <a href="{{ path('tool_edit', {'id': tool.id}) }}">Upgrade or add more cable</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
