{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>
    <h3><a href="{{ path('user_new') }}"><i class="fas fa-user-tie"> Register a new employee</i></a></h3>
    <table class="table table-hover table-bordered">
        <thead>
            <tr class="table-dark">
                <th>Email</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Salary ($)</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.salary }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}"><i class="far fa-eye"> Show</i></a>
                    <br>
                    <a href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-edit"> Edit</i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
