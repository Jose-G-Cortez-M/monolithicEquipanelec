<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

    </head>


    <body>

    <header>
        <section>
            <div>
                <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="{{ path('homepage') }}">
                            <i class="fas fa-broadcast-tower"></i>
                            {# <img src="{{ asset('images/products/img.png') }}" alt="Equipanelec" height="70"> #}
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNavDropdown">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="{{ path('homepage') }}">To do List</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('client_index') }}">Clients</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('task_index') }}">Tasks</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('user_index') }}">Employees</a>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Counter
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                        <li><a class="dropdown-item" href="{{ path('project_index') }}">Active Projects</a></li>
                                        <li><a class="dropdown-item" href="{{ path('project_close_index') }}">Closed Projects</a></li>
                                        <li><a class="dropdown-item" href="{{ path('counter') }}">Counter</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Inventory
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                        <li><a class="dropdown-item" href="{{ path('material_index') }}">Materials</a></li>
                                        <li><a class="dropdown-item" href="{{ path('cable_index') }}">Cables</a></li>
                                        <li><a class="dropdown-item" href="{{ path('tool_index') }}">Tools</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Movement
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                        <li><a class="dropdown-item" href="{{ path('movement_list') }}">Movements List</a></li>
                                        <li><a class="dropdown-item" href="{{ path('movement_index') }}">Movements with Projects</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Project
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                        <li><a class="dropdown-item" href="{{ path('project_index') }}">Active Projects</a></li>
                                        <li><a class="dropdown-item" href="{{ path('project_close_index') }}">Closed Projects</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item align-content-end dropdown" >
                                    <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-cogs"></i>
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                        <li><a class="dropdown-item" href="{{ path('app_logout') }}"><i class="fas fa-door-open"> Sign off</i></a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </section>
    </header>


    <div class="container">
        <div class="table-responsive">
            <div class="col-12">
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}

    </body>
</html>
