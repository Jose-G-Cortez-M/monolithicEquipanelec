{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ client.company }}</td>
            </tr>
            <tr>
                <th>Representative</th>
                <td>{{ client.representative }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ client.phone }}</td>
            </tr>
            <tr>
                <th>Direction</th>
                <td>{{ client.direction }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('client_index') }}"><i class="fas fa-hand-point-left"> back to list</i></a>
    <br>
    <a href="{{ path('client_edit', {'id': client.id}) }}"><i class="fas fa-edit"> Edit</i></a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
