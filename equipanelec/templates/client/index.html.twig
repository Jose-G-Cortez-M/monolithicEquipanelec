{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <h1>Client index</h1>
    <h3><a href="{{ path('client_new') }}"><i class="far fa-address-card"> Add Client</i></a></h3>

    <table class="table table-hover table-bordered">
        <thead>
            <tr class="table-dark">
                <th>Company</th>
                <th>Representative</th>
                <th>Phone</th>
                <th>Direction</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.company }}</td>
                <td>{{ client.representative }}</td>
                <td>{{ client.phone }}</td>
                <td>{{ client.direction }}</td>
                <td>
                    <a href="{{ path('client_show', {'id': client.id}) }}"><i class="far fa-eye"> Show</i></a>
                    <br>
                    <a href="{{ path('client_edit', {'id': client.id}) }}"><i class="fas fa-edit"> Edit</i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
